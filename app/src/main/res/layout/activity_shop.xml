<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/registrofond"
    android:id="@+id/shops"
    tools:context=".shopActivity">

    <android.support.v7.widget.Toolbar

        android:id="@+id/shop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimaryDark">
    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/shop"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="91dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="97dp"
        android:contentDescription="@string/app_name"
        android:text="@string/skate_shop"
        android:textAlignment="center"
        android:textSize="30sp"
        tools:text="@string/skate_shop" />

    <RelativeLayout
        android:layout_width="342dp"
        android:layout_height="380dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="23dp"
        android:background="@drawable/amarillo">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="144dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="143dp"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/logoyelow" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="103dp"
            android:layout_marginEnd="21dp"
            android:text="@string/shop_direc_pisanlof"
            android:textAlignment="center"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img1"
            android:layout_width="275dp"
            android:layout_height="158dp"
            android:layout_above="@+id/img3"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="4dp"
            android:contentDescription="@string/shop_pisanlof"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/pisandlof" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="82dp"
            android:layout_height="74dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="18dp"
            android:layout_marginBottom="9dp"
            android:contentDescription="@string/shop_pisanlof"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/pppisanlof" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="110dp"
            android:layout_height="74dp"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@+id/img2"
            android:contentDescription="@string/shop_pisanlof"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/pissanloof" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="86dp"
            android:layout_height="72dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="9dp"
            android:layout_toEndOf="@+id/img3"
            android:contentDescription="@string/shop_pisanlof"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/pisanlof" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="309dp"
            android:layout_height="32dp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="15dp"
            android:contentDescription="@string/shop_pisanlof"
            app:srcCompat="@drawable/shopname" />

    </RelativeLayout>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="0dp"
        android:background="@color/colorPrimaryDark"
        app:itemIconTint="#ffffff"
        app:itemTextColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/navigation" />


</RelativeLayout>