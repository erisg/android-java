<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ingresofondi"
    tools:context=".PostActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/add_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimaryDark">

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:padding="8dp">


        <EditText
            android:id="@+id/description"
            android:layout_width="286dp"
            android:layout_height="51dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="59dp"
            android:layout_marginTop="137dp"
            android:layout_marginEnd="47dp"
            android:layout_marginBottom="387dp"
            android:background="@drawable/input"
            android:contentDescription="@string/title_post_spot"
            android:hint="@string/title_post_spot"
            android:inputType="text"
            android:maxLines="5"
            android:text="@string/title_post_spot"
            android:textAlignment="center"
            tools:text="@string/title_post_spot" />


        <ImageView
            android:id="@+id/select_post"
            android:layout_width="374dp"
            android:layout_height="195dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginTop="188dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="176dp"
            android:background="@drawable/fondopost"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_galery" />


        <RelativeLayout
            android:layout_width="316dp"
            android:layout_height="159dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp"
            android:background="@drawable/amarillo">

            <EditText
                android:id="@+id/description1"
                android:layout_width="253dp"
                android:layout_height="38dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="35dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/input"
                android:hint="@string/title_post_truco"
                android:inputType="text"
                android:maxLines="5"
                android:textAlignment="center"
                tools:text="@string/title_post_rider" />

            <EditText
                android:id="@+id/description2"
                android:layout_width="253dp"
                android:layout_height="39dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="35dp"
                android:layout_marginBottom="64dp"
                android:background="@drawable/input"
                android:hint="@string/title_post_truco"
                android:inputType="text"
                android:maxLines="5"
                android:textAlignment="center"
                tools:text="@string/title_post_truco" />

            <Button
                android:id="@+id/enviar_post"
                android:layout_width="137dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="6dp"
                android:background="@drawable/compartir"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/goskate"
            android:layout_width="109dp"
            android:layout_height="69dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="137dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="130dp"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/logoingre" />


    </RelativeLayout>

    </RelativeLayout>