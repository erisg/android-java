<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ingresofondi"
    tools:context=".PostActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/add_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@color/colorPrimaryDark">

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:orientation="vertical"
        android:padding="8dp">


        <ImageView
            android:id="@+id/select_post"
            android:layout_width="374dp"
            android:layout_height="195dp"
            android:layout_below="@+id/description"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="14dp"
            android:layout_marginBottom="184dp"
            android:background="@drawable/fondopost"
            android:contentDescription="@string/app_name"
            android:scaleType="centerInside"
            android:src="@drawable/ic_action_galery" />


        <RelativeLayout
            android:layout_width="316dp"
            android:layout_height="159dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="6dp"
            android:background="@drawable/amarillo">

            <EditText
                android:id="@+id/description1"
                android:layout_width="280dp"
                android:layout_height="38dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:autofillHints="Rider"
                android:background="@drawable/input"
                android:hint="@string/title_password"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                tools:targetApi="o" />

            <EditText
                android:id="@+id/description2"
                android:layout_width="280dp"
                android:layout_height="38dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="13dp"
                android:autofillHints="Rider"
                android:background="@drawable/input"
                android:hint="@string/title_password"
                android:inputType="text"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                tools:targetApi="o" />

            <Button
                android:id="@+id/enviar_post"
                android:layout_width="137dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="6dp"
                android:background="@drawable/compartir"
                android:contentDescription="@string/app_name" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/goskate"
            android:layout_width="109dp"
            android:layout_height="69dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="137dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="130dp"
            android:contentDescription="@string/app_name"
            app:srcCompat="@drawable/logoingre" />

        <EditText
            android:id="@+id/description"
            android:layout_width="309dp"
            android:layout_height="34dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="157dp"
            android:layout_marginEnd="61dp"
            android:autofillHints="Rider"
            android:background="@drawable/input"
            android:hint="@string/title_password"
            android:inputType="text"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            tools:targetApi="o" />


    </RelativeLayout>

    </RelativeLayout>